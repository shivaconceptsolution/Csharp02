<Window x:Class="WpfApplication2.DrawingExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:PresentationOptions = "http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"  
        Title="DrawingExample" Height="350" Width="650">
    <Grid>
        <Border BorderBrush = "Gray" BorderThickness = "1"  
         HorizontalAlignment = "Left" VerticalAlignment = "Top" 
         Margin = "20">

            <Image Stretch = "None"  >
                <Image.Source>
                    <DrawingImage PresentationOptions:Freeze = "True">

                        <DrawingImage.Drawing>
                            <DrawingGroup>
                                <ImageDrawing Rect = "300,100,300,180" ImageSource = "logo2.png"/>
                                <ImageDrawing Rect = "0,100,250,100" ImageSource = "logo2.png"/>
                                <ImageDrawing Rect = "150,0,25,25" ImageSource = "logo2.png"/>
                                <ImageDrawing Rect = "0,0,75,75" ImageSource = "logo2.png"/>
                            </DrawingGroup>
                        </DrawingImage.Drawing>

                    </DrawingImage>
                </Image.Source>
            </Image>

        </Border>

    </Grid>
</Window>
